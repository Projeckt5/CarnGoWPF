<UserControl x:Class="CarnGo.SearchBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarnGo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox Grid.Column="0"
                 Style="{StaticResource SearchBar}"
                 Tag="Search..."
                 TextAlignment="Left"
                 VerticalAlignment="Center"
                 Margin="5"
                 />
        <Button Grid.Column="0"
                Style="{StaticResource IconGrowButton}"
                HorizontalAlignment="Right"
                Content="{StaticResource FontAwesomeSearchIcon}"
                Foreground="{StaticResource ForegroundDarkBrush}"
                Command="{Binding SearchCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
    </Grid>
</UserControl>

                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
                <local:SearchResultItemControl Height="100" Width="510" VerticalAlignment="Top"/>
        </StackPanel>
       </ScrollViewer>
    </Viewbox>
</UserControl>

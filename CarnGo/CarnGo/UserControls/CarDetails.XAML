<UserControl x:Class="CarnGo.CarDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="270">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{StaticResource BackgroundMainBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Databinding to specific icon -->
        <TextBox Text="{StaticResource FontAwesomeCarIcon}" FontFamily="{StaticResource FontAwesome}"
               Grid.Column="0" 
               />
        <!-- Databinding to viewmodel, that finds information from Model -->
        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
            >
            <!-- Car Model Binding -->
            <TextBlock Text="Mercedes Benz CLA 250"
                       Margin="0,0,0,8"
                       Padding="0,5,0,0"
                       FontSize="12"
                       FontWeight="Black"
                       />
            <!-- Car Manufactoring year -->
            <TextBlock Text="2011"
                       FontSize="12"
                       VerticalAlignment="Top"
                       />
        </StackPanel>    
    </Grid>
        <Grid Grid.Row="1" Background="{StaticResource BackgroundMainBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Must insert a converter to confirm whether it is CHECK or BAN -->
            <TextBox Text="{StaticResource FontAwesomeCheckIcon}" FontFamily="{StaticResource FontAwesome}"
                     Grid.Column="0" Grid.Row="0" Background="{StaticResource BackgroundMainBrush}"
            />

            <TextBox Text="Audio Player"
                     Grid.Column="1" Grid.Row="0" 
            />

            <TextBox Text="{StaticResource FontAwesomeCheckIcon}" FontFamily="{StaticResource FontAwesome}"
                     Grid.Column="2" Grid.Row="0"
            />

            <TextBox Text="Child seat"
                     Grid.Column="3" Grid.Row="0"
            />

            <TextBox Text="{StaticResource FontAwesomeBanIcon}" FontFamily="{StaticResource FontAwesome}"
                     Grid.Column="0" Grid.Row="1"
            />

            <TextBox Text="Smoking"
                     Grid.Column="1" Grid.Row="1"
            />

            <TextBox Text="{StaticResource FontAwesomeCheckIcon}" FontFamily="{StaticResource FontAwesome}"
                     Grid.Column="2" Grid.Row="1"
            />

            <TextBox Text="GPS"
                     Grid.Column="3" Grid.Row="1"
            />
        </Grid>
    </Grid>
</UserControl>

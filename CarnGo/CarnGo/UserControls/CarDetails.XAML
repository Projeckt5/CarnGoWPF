<UserControl x:Class="CarnGo.UserControls.CarDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">

    <Grid Background="{StaticResource BackgroundMainBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <!-- Databinding to specific icon -->
        <TextBox Text="{StaticResource FontAwesomeCarIcon}" FontFamily="{StaticResource FontAwesome}"
               Grid.Column="0" 
               />
        <!-- Databinding to viewmodel, that finds information from Model -->
        <StackPanel Orientation="Vertical"
                    Grid.Column="1"
            >
            <!-- Car Model Binding -->
            <TextBlock Text="Mercedes Benz CLA 250"
                       Margin="0,0,0,8"
                       Padding="0,5,0,0"
                       FontSize="12"
                       FontWeight="Black"
                       />
            <!-- Car Manufactoring year -->
            <TextBlock Text="2011"
                       FontSize="12"
                       VerticalAlignment="Top"
                       />
        </StackPanel>    
    </Grid>
</UserControl>

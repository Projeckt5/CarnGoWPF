<Page x:Class="CarnGo.View.RegisterCarProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:CarnGo.UserControls="clr-namespace:CarnGo.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border Background="{StaticResource BackgroundMainBrush}"
            BorderThickness="4"
            BorderBrush="{StaticResource BlueMainBrush}"
            Height="350"
            Width="600"
            CornerRadius="20">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>




                <Border Grid.Row="0" 
                Margin="50,20,50,10"
                BorderThickness="2" 
                BorderBrush="{StaticResource BlueMainBrush}"
                SnapsToDevicePixels="True"
                >
                    <Image Source="../Images/Bilfoto.jpg" HorizontalAlignment="Right" Width="192" />
                </Border>
                <Button Grid.Row="1" Content="Upload Photo" Margin="50,0,50,10"/>

                <StackPanel Grid.Row="2" Margin="50,0,50,0">
                    <TextBox HorizontalAlignment="Left" FontSize="10" Padding="3" BorderThickness="0">
                        Enter Car Description:

                    </TextBox>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden"
                                  >
                        <TextBlock Height="90"></TextBlock>
                    </ScrollViewer>


                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Margin="0, 50, 50, 0"
                    BorderBrush="{StaticResource BlueMainBrush}" 
                    >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MinWidth="123"/>
                            <ColumnDefinition Width="*" MinWidth="123"/>
                        </Grid.ColumnDefinitions>

                        <Label HorizontalAlignment="Left"
                            Grid.Row="0" Grid.Column="0"
                            Content="Car make:" Width="71"
                        />

                        <Label HorizontalAlignment="Left"
                            Grid.Row="0" Grid.Column="1"
                            Content="Model:"
                            Margin="0,0,0,0" Width="53"
                       />


                        <TextBlock HorizontalAlignment="Left" 
                            Grid.Row="1" Grid.Column="0" Width="110"
                            />

                        <TextBlock HorizontalAlignment="Left" 
                            Margin="0, 0, 0, 0"
                            Grid.Row="1" Grid.Column="1" Width="110"
                            />

                        <Label HorizontalAlignment="Left"
                               Grid.Row="2" Grid.Column="0"
                               Content="Seats:" Width="46"/>

                        <Label HorizontalAlignment="Left"
                               Grid.Row="2" Grid.Column="1"
                               Content="Fuel:"
                               Margin="0,0,0,0" Width="39"
                        />

                        <TextBlock HorizontalAlignment="Left" 
                                   Grid.Row="3" Width="110"
                        />

                        <ComboBox Grid.Row="3" Grid.Column="1" 
                                  Text="Select Fuel Type" 
                                  Margin="0,0,0,0">
                            <TextBlock>Petrol</TextBlock>
                            <TextBlock>Diesel</TextBlock>
                            <TextBlock>Electric</TextBlock>
                        </ComboBox>





                    </Grid>
                </Border>

                <Label HorizontalAlignment="Left"
                       Grid.Row="1" Grid.Column="0"
                       Content="Price:"
                />

                <TextBox Grid.Row="2" 
                         Text="Price In DKK"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Width="200"
                />


                <!-- Must only be enabled if dates have been set-->
                <Button Grid.Row="3" HorizontalContentAlignment="Center"
                    HorizontalAlignment="Center"
                    Content="Save" Margin="65,0,162,0"
                    />

            </Grid>
        </Grid>
    </Border>

</Page>
